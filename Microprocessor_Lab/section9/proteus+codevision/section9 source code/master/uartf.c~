void lcddisplay(void)
{
char scr[15];
lcd_clear();
ltoa(integer, scr);
//sprintf(scr,"%d",integer);
lcd_puts(scr);
}
/****************************/
void get_frame(void)
{
int a,b,c;
char i,j,end_frame,index_frame;
char data[10];

   a=getchar();
     if (a=='('){
     //i=0;
     for (j=0; j<10; j++)
     {
      a=getchar();
      
      //if (a!=')')
      if ((a=='0')||(a=='1')||(a=='2')||(a=='3')||(a=='4')||(a=='5')||(a=='6')||(a=='7')||(a=='8')||(a=='9'))
      {
      data[j]=a;
      //i++;
      }else if (a==')') 
      { 
       
       end_frame=1;
       index_frame=j;
       break;
      }else{
       puts(" frame must be integer in () \r\n"); 
       break;
      }
      }
       }
       
       
       if (end_frame==1)
       {
             end_frame=0;
             putchar('\n\r');
             for (j=0;j<(index_frame+1);j++)
             {
             putchar(data[j]);}
        }
                             
     if (index_frame==5){
                 
     puts(" number of data is correct\r\n");
     integer= (atol(data)); 
     
     //integer= 100000;//(atoi(data));
     
     lcddisplay(); 
     }else
     puts(" number of data must be 5\r\n"); 
        
     }
